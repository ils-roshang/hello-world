{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "es2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "declaration": true,
    "incremental": true,
    "composite": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "**/node_modules", "**/*.test.ts"]
}
